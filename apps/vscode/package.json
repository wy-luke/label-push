{
  "name": "label-push",
  "displayName": "Tag Push",
  "version": "0.2.1",
  "description": "Add a tag string to your latest commit message and then push.",
  "publisher": "wy-Luke",
  "author": {
    "name": "Luke",
    "email": "wykj.luke@gmail.com"
  },
  "keywords": [
    "tagPush",
    "git",
    "push",
    "commit",
    "commit message",
    "piplines",
    "CI/CD",
    "continuous integration",
    "CI/CD piplines"
  ],
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/wy-luke/tag-push",
  "repository": {
    "type": "git",
    "url": "https://github.com/wy-luke/tag-push.git"
  },
  "bugs": {
    "url": "https://github.com/wy-luke/tag-push/issues"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tag-push.tagPush",
        "title": "Tag Push",
        "icon": {
          "light": "resources/cmd-icon-light.svg",
          "dark": "resources/cmd-icon-dark.svg"
        }
      }
    ],
    "menus": {
      "scm/title": [
        {
          "when": "scmProvider == git",
          "command": "tag-push.tagPush",
          "group": "navigation"
        },
        {
          "when": "scmProvider == git",
          "command": "tag-push.tagPush",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Tag Push",
      "properties": {
        "tag-push.tag": {
          "type": "string",
          "default": "[build]",
          "description": "The string added to the commit message, aka the tag."
        },
        "tag-push.commitEmpty": {
          "type": "boolean",
          "default": false,
          "description": "Whether to create an empty commit with the tag when there are no new commits locally."
        },
        "tag-push.showStatusBarItem": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show \"Tag Push\" status bar item."
        },
        "tag-push.publishBranch": {
          "type": "string",
          "enum": [
            "Always",
            "Never",
            "Suggest"
          ],
          "default": "Suggest",
          "description": "Whether to publish the branch that does not exist in the remote repository."
        },
        "tag-push.publishDeletedBranch": {
          "type": "string",
          "enum": [
            "Always",
            "Never",
            "Suggest"
          ],
          "default": "Suggest",
          "description": "Whether to publish the branch that was deleted in the remote repository."
        },
        "tag-push.addStaged": {
          "type": "string",
          "enum": [
            "Always",
            "Never",
            "Suggest"
          ],
          "default": "Suggest",
          "description": "Whether to add the changes staged."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "vscpackage": "pnpm exec vsce package --no-dependencies",
    "vscpublish": "pnpm exec vsce publish --no-dependencies"
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.23.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  }
}
