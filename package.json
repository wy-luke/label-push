{
  "name": "tag-push",
  "displayName": "Tag Push",
  "version": "0.0.1",
  "description": "Add a tag to your latest commit message and then push.",
  "publisher": "wy-Luke",
  "author": {
    "name": "Luke",
    "email": "wykj.luke@gmail.com"
  },
  "keywords": [
    "git",
    "push",
    "commit",
    "commit message"
  ],
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tag-push.tagPush",
        "title": "Tag Push",
        "icon": {
          "light": "resources/cmd-icon-light.svg",
          "dark": "resources/cmd-icon-dark.svg"
        }
      }
    ],
    "menus": {
      "scm/title": [
        {
          "when": "scmProvider == git",
          "command": "tag-push.tagPush",
          "group": "navigation"
        },
        {
          "when": "scmProvider == git",
          "command": "tag-push.tagPush",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Tag Push",
      "properties": {
        "tag-push.tag": {
          "type": "string",
          "default": "[build]",
          "description": "The string added to the commit message, aka the tag."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "prepare": "husky install",
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies"
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.2"
  }
}
