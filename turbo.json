{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": { "dependsOn": ["^test"] },
    "vscpackage": { "dependsOn": ["^vscpackage"], "outputs": ["*.vsix"] },
    "vscpublish": { "dependsOn": ["^vscpublish"] }
  }
}
